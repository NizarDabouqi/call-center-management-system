<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!--

    The faces-config.xml file is a core JSF configuration file.


    faces-config.xml file is used to configure JSF (JavaServer Faces) settings.
    it integrates JSF with Spring by defining the EL (Expression Language)
    resolver for accessing Spring beans within JSF pages.

    -->

    <application>
        <!--
        The SpringBeanFacesELResolver allows JSF to access Spring-managed beans
        through JSF's Expression Language (EL). This enables you to inject Spring beans
        into JSF-managed beans and use them within JSF pages.
        -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

</faces-config>
